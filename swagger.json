  "paths": {
    "/contacts": {
      "post": {
        "tags": [
          "Contact"
        ],
        "description": "Create new contact",
        "parameters": [
          {
            "name": "contact",
            "in": "body",
            "description": "Contact that we want to create",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "New contact is created",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        }
      },
      "get": {
        "tags": [
          "Contact"
        ],
        "summary": "Get all contacts",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Contacts"
            }
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "parameters": [
        {
          "name": "contactId",
          "in": "path",
          "required": true,
          "description": "ID of contact that we want to find",
          "type": "integer"
        }
      ],
      "get": {
        "tags": [
          "Contact"
        ],
        "summary": "Get contact with given ID",
        "responses": {
          "200": {
            "description": "Contact is found",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete contact with given ID",
        "tags": [
          "Contact"
        ],
        "responses": {
          "200": {
            "description": "Contact is deleted",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        }
      },
      "put": {
        "summary": "Update contact with give ID",
        "tags": [
          "Contact"
        ],
        "parameters": [
          {
            "name": "contact",
            "in": "body",
            "description": "Contact with new values of properties",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact is updated",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "required": [
        "first_name",
        "last_name",
        "address",
        "email_address",
        "contact_number"
