      "properties": {
        "id": {
          "type": "integer"
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "email_address": {
          "type": "string"
        },
        "contact_number": {
          "type": "string"
        }
      }
    },
    "Contacts": {
      "type": "array",
      "$ref": "#/definitions/Contact"
    }
